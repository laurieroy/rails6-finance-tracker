<div class="results-block">
	<%= render 'layouts/messages' %>
</div>

<% if @stock %>
	<div class="card card-header results-block">
		<strong>Symbol: </strong> <%= @stock.ticker %>
		<strong>Name: </strong> <%= @stock.name %>
		<strong>Price: $</strong> <%= @stock.last_price %>
		<% if current_user.can_track_stock?(@stock.ticker) %>
			<%= link_to 'Add to Portfolio', user_stocks_path(user: current_user,
				ticker: @stock.ticker), class: "btn btn-xs btn-success", method: :post %>
		<% else %>
			<span class="badge badge-secondary">
				You are already tracking 
				<% if !current_user.under_stock_limit? %>
					10 stocks
				<% end %>
				<% if current_user.stock_already_tracked?(@stock.ticker) %>
					this stock
				<% end %>
			</span>
		<% end %>
	</div>
<% end %>

<% if @friend %>
	<div class="card card-header results-block">
		<strong>Full Name: </strong> <%= @user.full_name %>
		<strong>First Name: </strong> <%= @user.first_name %>
		<strong>Last Name: </strong> <%= @suser.last_name %>
		<strong>Email: $</strong> <%= @user.email %>
		<% if current_user.can_track_friend?(@stock.ticker) %>
			<%= link_to 'Add to Portfolio', user_stocks_path(user: current_user,
				friend: @user.full_name), class: "btn btn-xs btn-success", method: :post %>
		<% else %>
			<span class="badge badge-secondary">
				You are already tracking this friend.
			</span>
		<% end %>
	</div>
<% end %>